<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.example.an.testdemo"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- 分隔线样式 -->
        <activity
            android:name=".itemDecorationType.Activity.SimpleDecorationActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".itemDecorationType.Activity.PaintActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".itemDecorationType.Activity.DrawableActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".itemDecorationType.Activity.ComplexActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".itemDecorationType.Activity.SimpleGridActivity"
            android:screenOrientation="portrait">
        </activity>

        <!-- item显示不同样式 -->
        <activity
            android:name=".itemtype.Activity.itemTypeActivity"
            android:screenOrientation="portrait">
        </activity>

        <!-- 刷新显示 -->
        <activity
            android:name=".refresh.Activity.refreshActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>

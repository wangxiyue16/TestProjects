<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 没有标题栏样式 -->
    <style name="AppThemeNoTitleBar" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 没有标题栏样式 -->
    <style name="AppThemeCustom" parent="Theme.AppCompat.NoActionBar">
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>

    <style name="appThemeCustoms" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:height">2dp</item>
        <item name="android:background">#dddd00</item>
    </style>

</resources>
